<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aman.lyricify"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="33" />

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Notification listener permission for media detection -->
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />

    <!-- Optional: Wake lock to keep service running -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!-- For Android 12 and below -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <queries>
        <provider android:authorities="aman.loghub.provider" />
    </queries>

    <!-- Queries declaration for Android 11+ package visibility -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MEDIA_BUTTON" />
        </intent>
        <intent>
            <action android:name="android.media.browse.MediaBrowserService" />
        </intent>

        <!-- Common music apps for better detection -->
        <package android:name="com.spotify.music" />
        <package android:name="com.google.android.music" />
        <package android:name="com.apple.android.music" />
        <package android:name="com.google.android.apps.youtube.music" />
        <package android:name="com.amazon.mp3" />
        <package android:name="deezer.android.app" />
        <package android:name="com.soundcloud.android" />
        <package android:name="com.aspiro.tidal" />
    </queries>

    <permission
        android:name="aman.lyricify.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="aman.lyricify.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:name="aman.lyricify.Log"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >

        <!-- Main Activity -->
        <activity
            android:name="aman.lyricify.MainActivity"
            android:exported="true"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="aman.lyricify.LyricsActivity" />
        <activity android:name="aman.lyricify.SyncedLyricsActivity" />
        <activity android:name="aman.lyricify.TagEditorActivity" />
        <!-- Crash Activity -->
        <activity android:name="aman.lyricify.CrashActivity" />

        <!-- Notification Listener Service -->
        <service
            android:name="aman.lyricify.SongNotificationListener"
            android:exported="true"
            android:label="Lyricify Music Detection"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>

            <!-- Service metadata -->
            <meta-data
                android:name="android.service.notification.default_filter_types"
                android:value="conversations|alerting|silent" />
        </service>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="aman.lyricify.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>