<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80333333" /> <!-- 50% translucent -->
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#55FFFFFF" />
        </shape>
    </item>

    <!-- Inner shadow for depth -->
    <item android:inset="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#22000000"
                android:endColor="#00000000" />
            <corners android:radius="23dp" />
        </shape>
    </item>

    <!-- Top light gradient overlay (glass highlight) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#33FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>

</layer-list>