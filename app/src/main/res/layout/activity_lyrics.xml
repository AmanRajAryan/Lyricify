<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#121212">

    <RelativeLayout
        android:id="@+id/songInfoCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:padding="16dp"
        android:paddingRight="0dp"
        android:background="#1E1E1E">

        <ImageView
            android:id="@+id/songArtwork"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music_note"
            android:contentDescription="Album Artwork"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@id/songArtwork"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="0dp">

            <TextView
                android:id="@+id/songTitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="#fff"
                android:maxLines="2"
                android:text="Song Title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/songArtist"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text="Artist Name" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableStart="@drawable/ic_audio_file"
                    android:id="@+id/songFilePath"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:text="" />
            </HorizontalScrollView>
        </LinearLayout>

        <ImageButton
            android:id="@+id/showMetadataButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_metadata"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Metadata"
            android:tooltipText="Info"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            app:tint="#FFF" />

    </RelativeLayout>

    <!-- hasElrc Indicator -->
    <TextView
        android:id="@+id/hasElrcIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songInfoCard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="hasElrc: false"
        android:textSize="12sp"
        android:textColor="#B0B0B0"
        android:fontFamily="monospace"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/formatSelectorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hasElrcIndicator"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_format_selector"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/formatSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minWidth="100dp"
            android:popupBackground="#2A2A2A"
            android:spinnerMode="dropdown" />

        <ImageView
            android:id="@+id/formatDropdownArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="Dropdown Arrow"
            app:tint="#B0B0B0" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/songInfoCard"
        android:fillViewport="true"
        android:scrollbars="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:paddingTop="80dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/lyricsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#DDDDDD"
                android:lineSpacingExtra="8dp"
                android:textIsSelectable="true"
                android:text="Loading lyrics...."
                android:ellipsize="none"
                android:scrollHorizontally="true" />

        </ScrollView>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/actionToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/songInfoCard"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_floating_bar"
        android:elevation="6dp"
        android:padding="4dp">
        <ImageButton
            android:id="@+id/syncedLyricsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_synced_lyrics"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tooltipText="View Synced Lyrics"
            android:padding="0dp"
            app:tint="#FFF" />

        <ImageButton
            android:id="@+id/saveLrcButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_save_lrc"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tooltipText="Download .lrc"
            android:padding="10dp"
            app:tint="#FFF" />

        <ImageButton
            android:id="@+id/copyLyricsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_copy"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tooltipText="Copy Lyrics"
            android:padding="10dp"
            app:tint="#FFF" />

        <ImageButton
            android:id="@+id/embbedLyricsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_embed_file"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tooltipText="Embed Lyrics"
            android:padding="10dp"
            app:tint="#FFF" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/lyricsLoading"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/editTagsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Tags"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:backgroundTint="#ccFFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        app:cornerRadius="50dp"
        android:drawableEnd="@drawable/ic_line_end_arrow"
        android:drawableTint="#000" />

</RelativeLayout>