<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ImageView
        android:id="@+id/immersiveBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:contentDescription="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/artworkCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/songArtwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_note"
                android:contentDescription="Album Artwork" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/artworkCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/artworkCard"
            app:layout_constraintTop_toTopOf="@id/artworkCard">

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Song Title"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/songArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Artist Name"
                android:textColor="#CCFFFFFF"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/songFilePath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/artworkCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/syncedLyricsButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_synced_lyrics"
                app:tint="#FFF"
                android:tooltipText="Synced View" />

            <ImageButton
                android:id="@+id/saveLrcButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_save_lrc"
                app:tint="#FFF"
                android:tooltipText="Save .lrc" />

            <ImageButton
                android:id="@+id/copyLyricsButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_copy"
                app:tint="#FFF"
                android:tooltipText="Copy" />

            <ImageButton
                android:id="@+id/embbedLyricsButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_embed_file"
                app:tint="#FFF"
                android:tooltipText="Embed" />

            <ImageButton
                android:id="@+id/showMetadataButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_metadata"
                app:tint="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/formatSelectorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_surface_panel"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/actionRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_description"
                    app:tint="#B0B0B0"
                    android:contentDescription="Format" />

                <TextView
                    android:id="@+id/currentFormatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Plain"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/formatDropdownArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_chevron_down"
                    app:tint="#80FFFFFF" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="#33FFFFFF"
                android:layout_marginHorizontal="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/statusDot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/bg_indicator_dot"
                    android:backgroundTint="#FF5252"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/hasElrcIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="12sp"
                    android:textColor="#B0B0B0"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingTop="32dp"
            android:paddingHorizontal="24dp"
            android:paddingBottom="100dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/formatSelectorButton"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/lyricsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textColor="#F0F0F0"
                android:lineSpacingExtra="10dp"
                android:textIsSelectable="true"
                android:text="Loading lyrics...."
                android:gravity="center_horizontal" />
        </ScrollView>

        <ProgressBar
            android:id="@+id/lyricsLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:indeterminateTint="#FFF"
            app:layout_constraintTop_toBottomOf="@id/formatSelectorButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/editTagsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Tags"
        android:textColor="#000"
        android:textStyle="bold"
        app:icon="@drawable/ic_line_end_arrow"
        app:iconGravity="textEnd"
        app:iconTint="#000"
        app:iconPadding="10dp"
        android:paddingStart="24dp"
        android:paddingEnd="20dp"
        app:backgroundTint="#E6fffFFF"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:elevation="6dp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
