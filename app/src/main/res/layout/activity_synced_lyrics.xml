<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#121212">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_note"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/immersiveBackground" />

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/darkOverlay" />

    <aman.lyricify.SyncedLyricsView
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/syncedLyricsView" />

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/webViewContainer">

    </FrameLayout>

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/karaokeContainer">

    </FrameLayout>

    <aman.lyricify.GradientMaskedImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/immersiveBackgroundOverlay" />

    <com.google.android.material.card.MaterialCardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:strokeColor="#33FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#801E1E1E"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="24dp"
        android:id="@+id/headerCard">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal"
            android:id="@+id/headerLayout">

            <com.google.android.material.card.MaterialCardView
                android:layout_height="56dp"
                android:layout_width="56dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_note"
                    android:id="@+id/headerArtwork" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:id="@+id/syncedSongTitle"
                    android:text="Song Title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="#DDDDDD"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:id="@+id/syncedSongArtist"
                    android:text="Artist Name" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_bottom_scrim"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/controlsScrim" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="24dp"
        android:id="@+id/controlsLayout">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:translationY="12dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:id="@+id/positionText"
                android:text="0:00" />

            <aman.lyricify.SquigglySeekBar
                android:id="@+id/progressSeekBar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:layout_height="48dp"
                android:layout_width="48dp"
                app:icon="@drawable/ic_swap_horiz"
                app:iconSize="24dp"
                android:tooltipText="Change Player"
                android:padding="20dp"
                app:cornerRadius="24dp"
                app:iconTint="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconPadding="0dp"
                android:id="@+id/playerChangerButton"
                app:iconGravity="textStart" />

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:layout_height="48dp"
                android:layout_width="48dp"
                app:icon="@drawable/ic_skip_previous"
                app:iconSize="32dp"
                android:padding="0dp"
                app:cornerRadius="24dp"
                app:iconTint="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconPadding="0dp"
                android:id="@+id/prevButton"
                app:iconGravity="textStart" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/avd_play_to_pause"
                app:maxImageSize="42dp"
                app:backgroundTint="#FFFFFF"
                android:layout_marginHorizontal="24dp"
                app:tint="#000000"
                app:elevation="6dp"
                app:fabCustomSize="72dp"
                app:fabSize="normal"
                android:id="@+id/playPauseButton" />

            <com.google.android.material.button.MaterialButton
                android:layout_height="48dp"
                android:layout_width="48dp"
                app:icon="@drawable/ic_skip_next"
                app:iconSize="32dp"
                android:padding="10dp"
                app:cornerRadius="24dp"
                app:iconTint="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconPadding="0dp"
                android:id="@+id/nextButton"
                app:iconGravity="textStart" />

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:layout_height="48dp"
                android:layout_width="48dp"
                app:icon="@drawable/ic_text_fields"
                app:iconSize="24dp"
                android:tooltipText="Change Font"
                android:padding="20dp"
                app:cornerRadius="24dp"
                app:iconTint="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconPadding="0dp"
                android:id="@+id/fontSwitchButton"
                app:iconGravity="textStart" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
