<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Song Info Header -->
    <LinearLayout
        android:id="@+id/songInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1a1a1a"
        android:elevation="4dp"
        android:gravity="center_vertical">
        
        <!-- Artwork -->
        <ImageView
            android:id="@+id/headerArtwork"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music_note"
            android:contentDescription="Album Artwork" />
        
        <!-- Song Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/syncedSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/syncedSongArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textSize="14sp"
                android:textColor="#AAAAAA"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />
                
        </LinearLayout>

    </LinearLayout>

    <!-- Loading Bar -->
    <ProgressBar
        android:id="@+id/syncedLoadingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Synced Lyrics View -->
    <aman.lyricify.SyncedLyricsView
        android:id="@+id/syncedLyricsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/songInfoHeader"
        android:layout_above="@id/controlsLayout"
        android:background="#000000"
        android:scrollbars="none" />

    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1a1a1a"
        android:elevation="8dp">

        <!-- Position Text -->
        <TextView
            android:id="@+id/positionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/progressSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/playPauseButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@android:drawable/ic_media_play"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FFFFFF"
                android:contentDescription="Play/Pause" />
                
            <Button
                android:id="@+id/adjustTimingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â±ï¸ Timing"
                android:layout_marginStart="8dp"
                android:textSize="11sp"
                android:padding="8dp" />
                
            <Button
                android:id="@+id/fontSwitchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¤ Font"
                android:layout_marginStart="8dp"
                android:textSize="11sp"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>