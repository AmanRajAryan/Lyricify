<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#121212"
    android:id="@+id/rootLayout">

    <ImageView
        android:id="@+id/immersiveBackground"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_note"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/darkOverlay"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#66000000" />

    <FrameLayout
        android:id="@+id/webViewContainer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="visible" />

    <aman.lyricify.GradientMaskedImageView
        android:id="@+id/immersiveBackgroundOverlay"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:strokeColor="#33FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#801E1E1E"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_height="56dp"
                android:layout_width="56dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="12dp">
                <ImageView
                    android:id="@+id/headerArtwork"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_note" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/songTitleText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:text="Waiting for music..."
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/songArtistText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="#DDDDDD"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/controlsScrim"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_bottom_scrim"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/immersiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fullscreen"
        app:tint="#FFFFFF"
        app:backgroundTint="#33FFFFFF"
        app:elevation="0dp"
        app:fabSize="mini"
        app:borderWidth="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tooltipText="Toggle Immersive Mode" />

    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:translationY="12dp">
            <TextView
                android:id="@+id/positionText"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:text="0:00" />
            <aman.lyricify.SquigglySeekBar
                android:id="@+id/progressSeekBar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">
            
            <View android:layout_height="0dp" android:layout_width="0dp" android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/prevButton"
                android:layout_height="48dp"
                android:layout_width="48dp"
                app:icon="@drawable/ic_skip_previous"
                app:iconSize="32dp"
                android:padding="0dp"
                app:cornerRadius="24dp"
                app:iconTint="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconPadding="0dp"
                app:iconGravity="textStart" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/playPauseButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/avd_play_to_pause"
                app:maxImageSize="42dp"
                app:backgroundTint="#FFFFFF"
                android:layout_marginHorizontal="32dp"
                app:tint="#000000"
                app:elevation="6dp"
                app:fabCustomSize="72dp"
                app:fabSize="normal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextButton"
                android:layout_height="48dp"
                android:layout_width="48dp"
                app:icon="@drawable/ic_skip_next"
                app:iconSize="32dp"
                android:padding="10dp"
                app:cornerRadius="24dp"
                app:iconTint="#FFFFFF"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconPadding="0dp"
                app:iconGravity="textStart" />

            <View android:layout_height="0dp" android:layout_width="0dp" android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
