<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bubbleView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_music_note"
        android:scaleType="centerCrop"
        android:background="#1E1E1E"
        android:padding="1dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeColor="#44FFFFFF"
        app:strokeWidth="2dp"
        android:clickable="true"
        android:focusable="true"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expandedContainer"
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:visibility="gone"
        app:cardBackgroundColor="#121212"
        app:cardCornerRadius="24dp"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="1dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
            android:id="@+id/windowHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222222"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/btnMinimize"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_close"
                    app:tint="#DDDDDD"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tooltipText="Minimize"/>

                <TextView
                    android:id="@+id/songTitleOverlay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Lyrics"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginHorizontal="8dp"/>

                <ImageView
                    android:id="@+id/btnOpenApp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_pip_exit"
                    app:tint="#FFFFFF"
                    android:padding="6dp"
                    android:tooltipText="Open App"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/floatingWebContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
